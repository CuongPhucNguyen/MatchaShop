<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TableLayout android:id="@+id/TableLayout01"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="#55771B">

            <TextView
                android:id="@+id/asFilter"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Ascending Price Order"
                android:textAlignment="center"
                android:paddingVertical="10dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:onClick="onClick"
                android:clickable="true">

            </TextView>

        </TableLayout>

        <TableLayout android:id="@+id/TableLayout02"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="#55771B">

            <TextView
                android:id="@+id/desFilter"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Descending Price Order"
                android:textSize="15dp"
                android:textAlignment="center"
                android:paddingVertical="10dp"
                android:textStyle="bold"
                android:onClick="onClick"
                android:clickable="true">
            </TextView>

        </TableLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- recycler view to display our data -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/idRVProducts"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

</LinearLayout>

